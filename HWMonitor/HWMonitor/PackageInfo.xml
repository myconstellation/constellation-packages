<?xml version="1.0" encoding="utf-8" ?>
<Package xmlns="http://schemas.myconstellation.io/Constellation/1.8/PackageManifest"
         Name="HWMonitor"
         Version="2.0"
         Author="Sebastien Warin"
         URL="http://sebastien.warin.fr"
         Description="Hardware Monitor for Windows devices based on LibreHardwareMonitor"
         Icon="monitor.png">
  <Compatibility constellationVersion="1.8" dotNetTargetPlatform="net45">
    <Platforms>
      <Platform id="Win32NT" isCompliant="true" />
      <Platform id="Unix" isCompliant="false" />
      <Platform id="MacOS" isCompliant="false" />
    </Platforms>
  </Compatibility>
  <Settings>
    <Setting name="Interval" type="Int32" isRequired="false" description="Interval to push informations on Constellation" defaultValue="1000" />
  </Settings>
</Package>