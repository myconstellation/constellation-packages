<?xml version="1.0" encoding="utf-8" ?>
<Package xmlns="http://schemas.myconstellation.io/Constellation/1.8/PackageManifest"
         Name="OrangeTV"
         Version="1.1"
         Icon="Orange.png"
         Author="Sebastien Warin"
         URL="http://sebastien.warin.fr"
         Description="Connect your Orange Set-top box (LiveBox TV) to Constellation"
         EnableControlHub="false">
  <Compatibility constellationVersion="1.8" dotNetTargetPlatform="net45">
    <Platforms>
      <Platform id="Win32NT" isCompliant="true" />
      <Platform id="Unix" isCompliant="true" />
    </Platforms>
  </Compatibility>
  <Settings>
    <Setting name="Hostname" type="String" description="The Livebox TV hostname (or IP)" isRequired="true" ignoreLocalValue="true" />
    <Setting name="Verbose" type="Boolean" description="Verbose mode" defaultValue="false" isRequired="false" />
  </Settings>
</Package>