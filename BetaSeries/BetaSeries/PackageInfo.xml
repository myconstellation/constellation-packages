<?xml version="1.0" encoding="utf-8" ?>
<Package xmlns="http://schemas.myconstellation.io/Constellation/1.8/PackageManifest"
         Name="BetaSeries"
         Version="1.0.0"
         Author="Romain ODDONE"
         URL="https://github.com/roddone"
         Description="Get your favourite shows planning with BetaSeries through Constellation"
         Icon="betaseries.png"
         EnableControlHub="false">
  <Compatibility constellationVersion="1.8" dotNetTargetPlatform="net45">
    <Platforms>
      <Platform id="Win32NT" isCompliant="true" />
      <Platform id="Unix" isCompliant="true" />
    </Platforms>
  </Compatibility>
  <Settings>
    <!-- Add your package's settings here -->
    <Setting name="DeveloperKey" description="BetaSeries Developer Key" type="String" />
    <Setting name="Login" description="BetaSeries user login" type="String" />
    <Setting name="Password" description="BetaSeries user password" type="String" />
    <Setting name="PlanningPullInterval" description="Planning pulling interval (in minutes)." type="Int32" defaultValue="60" />
  </Settings>
</Package>